#!/bin/bash

BRANCH=$(git rev-parse --abbrev-ref HEAD)
PROTECTED_BRANCHES="^(master|develop)"
REGEX="^(feature|hotfix|bugfix|release)\/[a-zA-Z-]+[[a-zA-Z]$"

if [[ $1 != *"$BRANCH"* ]]; then
    echo -e "\nðŸš« Push the changes to your specific branch"
    echo -e "ðŸš« You must use (git push origin $BRANCH) \n"
    exit 1
fi

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]; then
    echo -e "ðŸš« You can't push to remote $BRANCH branch, please create your own branch and create a pull request to merge \n"
    exit 1
fi

if ! [[ $BRANCH =~ $REGEX ]]; then
    echo -e "\nðŸš« Your commit was rejected due to branching name"
    echo -e "ðŸš« Please use the following pattern: (feature|hotfix|release)/{name}"
    exit 1
fi

exit 0
